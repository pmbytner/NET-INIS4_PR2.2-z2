<Window
    x:Class="NET_INIS4_PR2._2_z2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:NET_INIS4_PR2._2_z2"
    mc:Ignorable="d"
    
    Title="MainWindow" Height="600" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label>Imię</Label>
        <TextBox
            Text="{Binding
                Path=Imię,
                UpdateSourceTrigger=PropertyChanged
            }"
            Grid.Column="1"
            />
        <Button
            Grid.Column="2"
            >OK</Button>

        <TextBlock
            Text="{Binding Path=Imię}"
            Grid.Column="0"
            Grid.Row="1"
            />
        <TextBlock
            Text="{Binding Path=Format}"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            />

        <Label
            Grid.Row="2"
            >Jakaś liczba</Label>
        <TextBox
            Grid.Column="1"
            Grid.Row="2"
            Text="{Binding
                Path=Liczba
            }"
            />
        <TextBlock
            Grid.Column="2"
            Grid.Row="2"
            Text="{Binding Path=Liczba}"
            />
        <Button
            Grid.Column="2"
            Grid.Row="3"
            Click="NaszKlikacz"
            >Ustaw 0</Button>
    </Grid>
</Window>
